    <!--查询操作-->
    <select id="list" resultType="com.xaut.pojo.Emp">
        select * from emp
        <where>
            <if test="name != null">
                name like concat('%',#{name},'%')
            </if>
            <if test="gender != null">
              and gender = #{gender}
            </if>
            <if test="begin != null and end != null">
              and entrydate between #{begin} and #{end}
            </if>
            order by update_time desc
        </where>
    </select>
</mapper>